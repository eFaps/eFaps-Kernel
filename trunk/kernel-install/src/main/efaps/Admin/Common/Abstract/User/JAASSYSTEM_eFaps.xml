<user-jaassystem xmlns="http://www.efaps.org/xsd"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://www.efaps.org/xsd http://www.efaps.org/xsd/eFaps_1.0.xsd">

  <uuid>878a1347-a5f3-4a68-a9a4-d214e3570a62</uuid>
  <file-application>eFaps-Kernel</file-application>
  <file-revision>$Rev$</file-revision>

  <definition>
    <version-expression>(version==4)</version-expression>
    <name>eFaps</name>
    <!-- person class and methods definitions -->
    <person>
      <classname>org.efaps.jaas.efaps.PersonPrincipal</classname>
      <key-method>getName</key-method>
      <name-method>getName</name-method>
      <firstname-method></firstname-method>
      <lastname-method></lastname-method>
      <email-method></email-method>
      <organisation-method></organisation-method>
      <url-method></url-method>
      <phone-method></phone-method>
      <mobile-method></mobile-method>
      <fax-method></fax-method>
    </person>
    <!-- role class and methods definitions -->
    <role>
      <classname>org.efaps.jaas.efaps.RolePrincipal</classname>
      <key-method>getName</key-method>
    </role>
    <!-- group class and methods definitions -->
    <group>
      <classname>org.efaps.jaas.efaps.GroupPrincipal</classname>
      <key-method>getName</key-method>
    </group>
    <!-- keys for usable persons -->
    <assigned-person key="Administrator">Administrator</assigned-person>
    <!-- keys for usable roles -->
    <assigned-role key="Administration">Administration</assigned-role>
    <assigned-role key="Admin_User_ModifyUsers">Admin_User_ModifyUsers</assigned-role>
    <assigned-role key="Common_Main_PwdChg">Common_Main_PwdChg</assigned-role>
    <assigned-role key="Admin_User_ViewUsers">Admin_User_ViewUsers</assigned-role>
  </definition>

</user-jaassystem>
